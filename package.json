{
  "name": "@atwright147/react-layout",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/react-layout.umd.cjs",
  "module": "./dist/react-layout.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-layout.js",
      "require": "./dist/react-layout.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:lib": "tsc -p tsconfig.lib.json && vite build",
    "lint": "biome lint .",
    "build:demo": "tsc && vite build --mode demo",
    "preview": "vite preview --mode demo",
    "storybook": "storybook dev -p 6006",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@storybook/builder-vite": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "globals": "^15.12.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
